<% include _head.ejs %>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h3><%= success %></h3>
        <h3><%= error %></h3>

        <h4>周报上传</h4>
        <form class="form-horizontal" role="form" action="/upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="col-lg-2 control-label">标题</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="title" name="title" placeholder="请输入标题">
                </div>
            </div>
            <div class="form-group">
                <label for="weekly" class="col-lg-2 control-label">文件</label>
                <div class="col-lg-10">
                    <input type="file" class="form-control" name="weekly" id="weekly">
                    <p class="help-block">点击选择需要上传的文件.</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-primary">上传</button>
                </div>
            </div>
        </form>
    </div>
    <!-- /.col-md-12 -->
</div>
<!-- /.row -->

<% include footer.ejs %>
