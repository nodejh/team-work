<% include _head.ejs %>
<link href="css/project.css" rel="stylesheet">
<link href="/css/home.css" rel="stylesheet">
<link href="/css/new-project.css" rel="stylesheet">
<link href="/css/passowrd.css" rel="stylesheet">
<% include _header.ejs %>
<% include _nav.ejs %>
<div class="c-info">
  <% if (error) { %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= error %>
  </div>
  <% } %>
</div>
<div class="c-info">
  <% if (success) { %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= success %>
  </div>
  <% } %>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <a href="/profile" class="c_behind_title">
        <div class="new-project">
          <div class="link-page-behind" id="behind">
            个人中心
          </div>
        </div>
      </a>
    </div>

    <div class="col-xs-10 col-xs-offset-1 page">

      <div id="project">
        <div class="project-content">
          <div class="project-header">
            <div class="project-sections ">
              <div class="password_section section-todos">
                修改密码
              </div>
            </div>
          </div>

          <form class="form-horizontal password_form" action="/update_password" method="post">
            <div class="form-group">
              <label for="password_old" class="col-sm-2 control-label">原密码</label>
              <div class="col-sm-10">
                <input type="password" class="form-control password" id="password_old" name="password_old">
              </div>
            </div>
            <div class="form-group">
              <label for="password_new" class="col-sm-2 control-label">新密码</label>
              <div class="col-sm-10">
                <input type="password" class="form-control password" id="password_new" name="password_new">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">修改密码</button>
              </div>
            </div>
          </form>
        </div>


      </div>
    </div>
  </div>

  <% include _footer.ejs %>
<% include _foot.ejs %>