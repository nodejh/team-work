<% include _head.ejs %>
<link rel="stylesheet" href="/css/flat-ui.css">
<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/password.css">
<% include _header.ejs %>

<div class="c-info">
  <% if (error) { %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= error %>
  </div>
  <% } %>
</div>


<div class="c-info">
  <% if (success) { %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= success %>
  </div>
  <% } %>
</div>


<div class="container">
  <div class="register">
    <div class="login-screen c_login_screen">
      <h1 class="c_title">重置密码</h1>
      <form role="form" action="/reset_password" method="post">

        <input type="text" class="display_none" name="token" value="<%= token %>">

        <div class="login-form">
          <div class="form-group">
            <input type="password" class="form-control login-field" name="password" value="" placeholder="请输入您的新密码" id="login-name" />
            <label class="login-field-icon fui-user" for="login-name"></label>
          </div>
          <div class="form-group">
            <input type="password" class="form-control login-field" name="re_password" value="" placeholder="请再次您的新密码" id="login-name" />
            <label class="login-field-icon fui-user" for="login-name"></label>
          </div>

          <button type="submit" class="btn btn-primary btn-lg btn-block">重置密码</button>
          <p class="login-link">
            <a href="/login">登录</a>
            或<a href="/register">没有帐号?</a>
          </p>
        </div>
      </form>
    </div>

  </div>
</div>


<% include _footer.ejs %>
<% include _foot.ejs %>
