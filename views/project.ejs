<% include _head.ejs %>
<link href="css/project.css" rel="stylesheet">
<link href="/css/home.css" rel="stylesheet">
<link href="/css/new-project.css" rel="stylesheet">
<% include _header.ejs %>
<% include _nav.ejs %>
<div class="c-info">
  <% if (error) { %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= error %>
  </div>
  <% } %>
</div>
<div class="c-info">
  <% if (success) { %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= success %>
  </div>
  <% } %>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <a href="/projectindex" class="c_behind_title">
        <div class="new-project">
          <div class="link-page-behind" id="behind">
            <%= user.name %>的所有项目
          </div>
        </div>
      </a>
    </div>

    <div class="col-xs-10 col-xs-offset-1 page">

      <div id="project">
        <div class="project-content">
          <div class="project-header">
            <div class="project-hd-info">
              <p><%= project.name %></p>
              <% if(project.checkbox == 1){ %>
              <p><%= project.description %></p>
              <% } %>
            </div>

            <div class="project-links">

              <a href="/projects/a422d56cdb3548bea24e3edb01a8c594/stats" class="link-stats" title="待处理任务" data-stack=""
                 data-nocache="">
                <span class="main">0</span>
                <span>待处理任务</span>
              </a>

              <a href="/projects/a422d56cdb3548bea24e3edb01a8c594/members" class="link-admin-members" title="邀请新成员加入项目"
                 data-stack="" data-nocache="">
                <span class="main"><%= projectinf.length %></span>
                <span>成员</span>
              </a>

              <a href="/projects/a422d56cdb3548bea24e3edb01a8c594/settings" class="link-admin-settings" title="项目设置"
                 data-visible-to="admin" data-stack="" data-nocache="">
                <span class="fui-gear"></span>
                <span class="setting">设置</span>
              </a>
            </div>
          </div>
          <div class="project-sections ">
            <div class="section section-todos" id="todolists">
              <h5><a>任务</a>
                <a id="mission" href="/todo?ssl=<%= project.ss %>" class="btn btn-default btn-xs c_margin_left c_btn demo-heading-note"
                   data-toggle="dropdown">
                  添加任务
                </a>
              </h5>
            </div>
            <div class="section section-messages" id="topics" data-droppable="">
              <h5><a>讨论</a>
                <a id="topic" href="/topics?ssl=<%= project.ss %>" class="btn btn-default btn-xs c_margin_left c_btn demo-heading-note">发起讨论</a>
              </h5>
            </div>
            <div class="section section-file" id="todolists">
              <h5><a href="#">文件</a>
                <div class="btn-group">
                  <button class="btn btn-default btn-xs c_margin_left c_btn" type="button">上传文件</button>
                  <button data-toggle="dropdown" class="btn btn-default dropdown-toggle btn-xs c_btn_select" type="button">
                    <span class="caret"></span>
                    <span class="sr-only">上传文件</span>
                  </button>
                  <ul role="menu" class="dropdown-menu">
                    <li><a href="javascript:;" id="create_folder">创建文件夹</a></li>
                    <li><a href="javascript:;">上传文件</a></li>
                  </ul>
                </div>

                <div class="c_file">
                  <div class="row">
                    <div class="col-xs-6 col-md-3">
                      <div class="c_file_img">
                        <img src="/img/site/file.png" alt="file" />
                        <p class="c_file_title">参考资料</p>
                      </div>
                    </div>
                    <div class="col-xs-6 col-md-3">
                      <div class="c_file_img">
                        <img src="/img/site/file.png" alt="file" />
                        <p class="c_file_title">需求文档</p>
                      </div>
                    </div>
                    <div class="col-xs-6 col-md-3">
                      <div class="c_file_img">
                        <img src="/img/site/file.png" alt="file" />
                        <p class="c_file_title">设计图</p>
                      </div>
                    </div>
                    <div class="col-xs-6 col-md-3">
                      <div class="c_file_img">
                        <img src="/img/site/file.png" alt="file" />
                        <p class="c_file_title">其它</p>
                      </div>
                    </div>
                  </div>
                </div>
              </h5>
            </div>
            <div class="section section-word" id="todolists">
              <h5><a class=href="#">文档</a>

                <button class="btn btn-default btn-xs demo-heading-note c_margin_left c_btn" type="button">创建文档</button>
              </h5>
            </div>
            <div class="section section-data" id="todolists">
              <h5><a>周报</a>
                <a id="topic" href="/weekly?ssl=<%= project.ss %>" class="btn btn-default btn-xs c_margin_left c_btn demo-heading-note">创建周报</a>
              </h5>
            </div>

          </div>
        </div>
      </div>


    </div>
  </div>
</div>


<% include _footer.ejs %>
<script src="js/project.js"></script>
<% include _foot.ejs %>