<div class="c-info">
    <% if (error) { %>
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <%= error %>
    </div>
    <% } %>
</div>


<div class="c-info">
    <% if (success) { %>
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <%= success %>
    </div>
    <% } %>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 page">
            <div>
                <h1 class="page-title">
                    主题
                </h1>
            </div>
            <div>
                <div><input type="button" name="subject" id="txt_begin" class="btn" value="点击发起讨论" onclick="show()" /></div>

                <div  data-remote="true" data-type="json" id="txt" style="display:none">
                    <div class="form-item">
                        <div class="span3">
                            <input tabindex="1" type="text" name="subject" id="txt-title" style="width:100%" placeholder="    话题" />
                        </div>
                    </div>
                    <div>
                        <div>
                            <textarea tabindex="1" name="content" id="txt-content" ></textarea>
                        </div>
                    </div>
                    <div class="form-item">
                        <button tabindex="1" class="btn" id="btn-post" data-disable-with="正在提交...">发起讨论</button>
                        <a tabindex="2" href="javascript:;" class="btn" id="link-cancel-post">取消</a>
                    </div>
                </div>


            </div>

            <h4 class="title">正在进行的讨论</h4>
            <div class="messages" id="messages">
                <% if (topics.length > 0) { %>
                <% topics.forEach(function (item) { %>

                <div class="message " id="message" name="<%= item.id %>">
                    <img class="avatar" src="/img/bj.jpg" />
                    <div class="name">
                        <%=item.user_name%>
                    </div>
                  <span class="message-title">
                          <span class="todo-rest"><%= item.title%></span>
                  </span>
                    <p>
                  <span class="message-content">
                      <%- item.content%>
                  </span>
                    </p>
                    <section id="parent">
                        <input type="button" name="subject" id="begin" class="btn" value="点击发表评论" onclick="show1()" />
                        <div  id="form1"  style="display:none">

                            <div  class="form-item">
                                <div>
                                    <input type="hidden" value="<%= item.id%>" id="topic_id">
                                    <input type="text"  class="form-control" tabindex="1" name="content" id="commit" />
                                </div>
                            </div>
                            <div class="form-item">
                                <button tabindex="1" class="btn" id="submit" data-disable-with="正在提交...">发表评论</button>
                                <a tabindex="2" href="javascript:;" class="btn" id="link-cancel-post">取消</a>
                            </div>
                        </div>
                    </section>

                    <div class="comment-info">

                        <a href="" class="comments-count" data-stack="true">2</a>
                    </div>
                </div>


                <% }); %>
                <% } else { %>
                <div class="empty">
                    暂时没有发起过讨论
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>


