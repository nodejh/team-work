<% include _head.ejs %>
<link rel="stylesheet" href="/css/flat-ui.css">
<link rel="stylesheet" href="/css/register.css">
<% include _header.ejs %>

<div class="c-info">
  <% if (error) { %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= error %>
  </div>
  <% } %>
</div>

<div class="container">
  <div class="register">
    <div class="login-screen">
      <div class="login-icon">
        <img src="/img/login/icon.png" alt="Welcome to Mail App" />
        <h4>Welcome to <a class="font-white" href="/"><small>Nucleus</small></a></h4>
      </div>
      <form role="form" action="/login" method="post">
        <div class="login-form">
          <div class="form-group">
            <input type="text" class="form-control login-field" name="email" value="" placeholder="请输入您的邮箱" id="login-name" />
            <label class="login-field-icon fui-user" for="login-name"></label>
          </div>

          <div class="form-group">
            <input type="password" class="form-control login-field" name="password" value="" placeholder="请输入您的密码" id="login-pass" />
            <label class="login-field-icon fui-lock" for="login-pass"></label>
          </div>

          <button type="submit" class="btn btn-primary btn-lg btn-block">登录</button>
          <p class="login-link">
            <a href="/find_password">忘记密码?</a>
            或<a href="/register">没有帐号?</a>
          </p>
        </div>
      </form>
    </div>

  </div>
</div>


<% include _footer.ejs %>
<% include _foot.ejs %>
